<div class="card">
  <div class="card-header bg-success text-light">
    <h2>Log in</h2>
  </div>
  <div class="card-body">

    <p class="card-text"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>
<br/>
  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password",
      class:"form-control", placeholder:"Password", autocomplete: "current-password" %>
  </div>
<br/>
  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
<br/>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-outline-dark" %>
  </div>
<% end %></p>
  </div>
</div>

<br/>
<%= render "devise/shared/links" %>
